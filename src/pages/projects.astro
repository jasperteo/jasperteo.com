---
import RootLayout from "@/layouts/RootLayout.astro";
import AppLayout from "@/layouts/AppLayout.astro";
import ProjectsOutlet from "@/components/ProjectsOutlet.astro";

const title = "Jasper Teo";
const description =
  "Hey there! I like crafting cool stuff for the web. Come explore and see what I'm up to!";
---

<RootLayout title={title} description={description}>
  <meta name="robots" content="noindex" slot="noindex" />
  <AppLayout slot="app">
    <ProjectsOutlet slot="outlet" />
  </AppLayout>
</RootLayout>
