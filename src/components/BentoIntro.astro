---
import BentoGrid from "@/layouts/BentoGrid.astro";
import BentoGridItem from "@/layouts/BentoGridItem.astro";
import { buttonVariants } from "@/components/ui/button-variants";
import { cn } from "@/lib/utils";

const contactInfo = [
  {
    name: "GitHub",
    url: "https://github.com/jasperteo",
    icon: "line-md:github-loop",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/jaspertzj/",
    icon: "line-md:linkedin",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/jasper_teo",
    icon: "line-md:twitter-x-alt",
  },
];
---

<BentoGrid className="md:grid-cols-25">
  <BentoGridItem
    className="md:col-span-16 md:row-span-2"
    title="About Me"
    icon="carbon:machine-learning"
  >
    <div class="m-auto p-4 leading-7 transition-colors space-y-6" slot="header">
      <p>
        My name is <span class="font-semibold">Jasper Teo</span>, and I focus on
        full stack development and web technologies. I am mainly interested
        building products that deliver a good user experience, leveraging on
        modern tools and technologies to improve productivity and developer
        experience. Always looking for opportunities to learn and grow.
      </p>
      <p>
        I am currently looking for a full-time position as a software engineer.
      </p>
    </div>
  </BentoGridItem>

  <BentoGridItem
    className="md:col-span-9 md:row-span-1"
    title="Contact"
    icon="carbon:at"
  >
    <ul class="m-auto p-4 font-title space-y-2.5" slot="header">
      {
        contactInfo.map(({ name, url, icon }) => (
          <li>
            <a
              href={url}
              target="_blank"
              rel="noreferrer"
              class={cn(
                buttonVariants({ variant: "link" }),
                "gap-x-2 text-lg text-inherit hover:text-primary"
              )}
            >
              <iconify-icon icon={icon} slot="icon" />
              {name}
            </a>
          </li>
        ))
      }
    </ul>
    <p class="text-sm" slot="description">
      Drop me an email at{" "}
      <a
        class="decoration-dashed hover:underline"
        href="mailto:jaspertzj@outlook.sg"
      >
        jaspertzj@outlook.sg
      </a>
    </p>
  </BentoGridItem>

  <BentoGridItem
    className="md:col-span-9 md:row-span-1"
    title="Tech I Love"
    icon="carbon:terminal"
  >
    <ul class="m-auto p-4 font-mono transition-colors space-y-2" slot="header">
      <li>
        <iconify-icon inline icon="logos:javascript"></iconify-icon>{" "}
        <iconify-icon inline icon="logos:typescript-icon"></iconify-icon> TypeScript
      </li>
      <li>
        <iconify-icon inline icon="logos:nodejs-icon"></iconify-icon>
        <iconify-icon inline icon="logos:bun"></iconify-icon>{" "}
        Node.js/Bun
      </li>
      <li>
        <iconify-icon inline icon="logos:react"></iconify-icon>{" "}
        <iconify-icon inline icon="logos:nextjs-icon"></iconify-icon> Next.js
      </li>
      <li>
        <iconify-icon inline icon="logos:postgresql"></iconify-icon>{" "}
        <iconify-icon inline icon="logos:supabase-icon"></iconify-icon> Supabase
      </li>
      <li>
        <iconify-icon inline icon="logos:hono"></iconify-icon> Hono
      </li>
      <li>
        <iconify-icon inline icon="logos:vitejs"></iconify-icon> Vite
      </li>
    </ul>
  </BentoGridItem>
</BentoGrid>
