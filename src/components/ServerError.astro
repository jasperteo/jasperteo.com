---
import { Image } from "astro:assets";
import { Link } from "@kobalte/core/link";

import { Button } from "@/components/ui/button";
import internalServerError from "@/images/500InternalServerError.png";

type Props = { errorMessage: string };

const { errorMessage } = Astro.props;
---

<div class="mx-auto w-fit text-center space-y-8">
	<h1 class="text-2xl text-orange-11 font-semibold font-mono sm:text-3xl">
		<span class="text-3xl sm:text-5xl">
			<iconify-icon icon="carbon:number-5"></iconify-icon>
			<iconify-icon icon="carbon:number-0"></iconify-icon>
			<iconify-icon icon="carbon:number-0"></iconify-icon>
		</span>
		<br />
		Internal Server Error
	</h1>

	<Image
		class="mx-auto w-sm sm:w-md"
		src={internalServerError}
		alt="500 Internal Server Error"
		title="Logo by @sawaratsuki1004"
		loading="eager"
		format="avif"
	/>

	<Button class="font-mono md:text-xl" size="lg" as={Link} href="/">
		cd ~
	</Button>

	<p class="font-mono md:text-xl">
		{errorMessage}
	</p>
</div>
