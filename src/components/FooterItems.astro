---
type FooterLinksType = {
  url: string;
  icon: string;
  label: string;
};

const footerLinksList: FooterLinksType[] = [
  {
    url: "https://pages.cloudflare.com/",
    icon: "simple-icons:cloudflarepages",
    label: "Cloudflare Pages",
  },
  {
    url: "https://workers.cloudflare.com/",
    icon: "simple-icons:cloudflareworkers",
    label: "Cloudflare Workers",
  },
  {
    url: "https://supabase.com/",
    icon: "simple-icons:supabase",
    label: "Supabase",
  },
  {
    url: "https://astro.build/",
    icon: "simple-icons:astro",
    label: "Astro",
  },
  {
    url: "https://react.dev/",
    icon: "simple-icons:react",
    label: "React",
  },
  {
    url: "https://www.radix-ui.com/",
    icon: "simple-icons:radixui",
    label: "Radix UI",
  },
  {
    url: "https://unocss.dev/",
    icon: "simple-icons:unocss",
    label: "UnoCSS",
  },
  {
    url: "https://ui.shadcn.com/",
    icon: "simple-icons:shadcnui",
    label: "Shadcn UI",
  },
];
---

<h2 class="mx-auto my-4 w-fit text-center font-medium transition-colors">
  Made With:
</h2>
<div
  class="grid grid-cols-4 mx-auto w-fit gap-x-5 gap-y-3 border border-transparent rounded-2xl px-5 py-3 shadow-primary/69 sm:flex sm:gap-6 sm:bg-stone-900/10 sm:text-xl sm:shadow-sm sm:backdrop-blur-sm sm:backdrop-opacity-90 sm:dark:bg-stone-50/10"
>
  {
    footerLinksList.map(({ url, label, icon }) => (
      <a
        href={url}
        target="_blank"
        rel="noreferrer"
        aria-label={label}
        class="place-self-center transition-all duration-300 hover:scale-150 sm:hover:mx-2"
      >
        <iconify-icon icon={icon} />
      </a>
    ))
  }
</div>
