---
import FooterItems from "@/components/FooterItems.astro";
import NavBar from "@/components/NavBar.astro";
import { Separator } from "@/components/ui/separator";
---

<div
  class="relative min-w-dvw scroll-smooth bg-zinc-100 p-8 font-sans antialiased transition-colors min-h-dvh dark:bg-zinc-900"
>
  <div class="mx-auto min-w-80 lg:max-w-5xl">
    <header>
      <NavBar />
    </header>

    <Separator className="my-4" />

    <main class="mb-40">
      <slot name="outlet" />
    </main>

    <footer class="absolute inset-x-8 bottom-8 mx-auto min-w-80 lg:max-w-5xl">
      <FooterItems />
    </footer>
  </div>
</div>

