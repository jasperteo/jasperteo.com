---
import FooterItems from "@/components/FooterItems.astro";
import NavBar from "@/components/NavBar.astro";
import { Separator } from "@/components/ui/separator";
---

<script data-cfasync="false" is:inline>
  const themeValues = ["dark", "light", "system"];
  const defaultTheme = "system";
  const storageKey = "theme";

  const useTheme = (document) => {
    let theme = localStorage.getItem(storageKey) ?? defaultTheme;
    if (theme !== "dark" && theme !== "light") {
      theme = window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    }
    document.documentElement.classList.remove(...themeValues);
    document.documentElement.classList.add(theme);
  };

  useTheme(document);

  document.addEventListener("astro:before-swap", (event) =>
    useTheme(event.newDocument)
  );
</script>

<div
  class="relative min-w-dvw bg-zinc-50 p-8 font-sans antialiased transition-colors min-h-dvh dark:bg-zinc-900"
>
  <div class="mx-auto min-w-80 lg:max-w-5xl">
    <header>
      <NavBar />
    </header>

    <Separator className="my-4" />

    <main class="mb-40">
      <slot name="outlet" />
    </main>

    <footer class="absolute inset-x-8 bottom-8 mx-auto min-w-80 lg:max-w-5xl">
      <FooterItems />
    </footer>
  </div>
</div>

<style is:global>
  :root {
    font-synthesis: none;
    color-scheme: light dark;
    background-color: light-dark(rgb(250, 250, 250), rgb(24, 24, 27));
  }

  iconify-icon {
    display: inline-block;
    width: 1em;
    height: 1em;
  }
</style>
