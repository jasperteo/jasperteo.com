{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",

	"trailingComma": "es5",
	"tabWidth": 2,
	"semi": true,
	"singleQuote": false,
	"useTabs": true,
	"bracketSpacing": true,
	"printWidth": 80,

	"sortTailwindcss": { "functions": ["cn", "cva"] },

	"ignorePatterns": [
		// Ignore all markdown files
		"*.md",
		"README",
		"LICENSE",
		// Ignore generated files
		"**/routeTree.gen.ts"
	]
}
